# ===========================================
#  Sivee.pro - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --- PostgreSQL ---
POSTGRES_USER=cvuser
POSTGRES_PASSWORD=change_me
POSTGRES_DB=cvdatabase
# DATABASE_URL is built automatically in docker-compose.yml

# --- JWT Authentication ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change_me
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Google OAuth2 (optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback
FRONTEND_URL=https://yourdomain.com

# --- CORS (optional, has sensible defaults) ---
# Comma-separated origins. Default includes sivee.pro + localhost dev servers.
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# --- Mistral AI (for CV import) ---
MISTRAL_API_KEY=

# --- AWS S3 (photo storage) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=eu-west-3

# --- SMTP (welcome email) ---
SMTP_HOST=smtp.zohocloud.ca
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=donotreply@sivee.pro
